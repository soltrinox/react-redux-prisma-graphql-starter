  "dependencies": {
    "agathias": "0.0.4",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.16.3",
    "js-yaml": "^3.11.0",
    "strigoaica-facebook": "^0.0.4",
    "strigoaica-gmail": "^0.0.1",
    "strigoaica-maildev": "0.0.1",
    "strigoaica-sendgrid": "0.0.1",
    "strigoaica-strategy": "0.0.1"
  },
  "devDependencies": {
    "@types/node": "^10.5.2",
    "babel-cli": "^7.0.0-beta.3",
    "babel-preset-env": "^1.7.0",
    "jest": "^23.0.1",
    "jest-environment-node": "^23.0.1",
    "jest-extended": "^0.7.2",
    "standard": "^11.0.1",
    "superagent": "^4.0.0-alpha.1",
    "supertest": "^3.1.0",
    "typescript": "^2.9.2"
